{{- define "group_repos" -}}
<!DOCTYPE html>
<html lang="en">
	<head>
		{{ template "head_common" . }}
		<title>Repos in {{ .group_name }} &ndash; {{ .global.forge_title }}</title>
	</head>
	<body class="group-repos">
		{{ template "header" . }}
		<div class="padding-wrapper">
			<table class="wide">
			<thead>
				<tr>
					<th colspan="2" class="title-row">Repos in {{ .group_name }}</th>
				</tr>
			</thead>
			<tbody>
				{{- range .repos }}
					<tr>
						<td>
							<a href="{{ .Name }}/">{{ .Name }}</a>
						</td>
						<td>
							{{ .Description }}
						</td>
					</tr>
				{{- end }}
			</tbody>
			</table>
		</div>
		<footer>
			{{ template "footer" . }}
		</footer>
	</body>
</html>
{{- end -}}

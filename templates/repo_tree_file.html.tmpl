{{- define "repo_tree_file" -}}
<!DOCTYPE html>
<html lang="en">
	<head>
		{{ template "head_common" . }}
		<link rel="stylesheet" href="/:/static/chroma.css" />
		<title>{{ .group_name }}/repos/{{ .repo_name }}/{{ .path_spec }} &ndash; {{ .global.forge_title }}</title>
	</head>
	<body class="repo-tree-file">
		{{ template "header" . }}
		<div class="padding">
			<p>
				/{{ .path_spec }} (<a href="/{{ .group_name }}/:/repos/{{ .repo_name }}/raw/{{ .path_spec }}{{ if .ref_type }}?{{ .ref_type }}={{ .ref_name }}{{ end }}">raw</a>)
			</p>
			{{ .file_contents }}
		</div>
		<footer>
			{{ template "footer" . }}
		</footer>
	</body>
</html>
{{- end -}}

{{- define "group_view" -}}
{{ if .subgroups }}
	<table class="wide">
		<thead>
			<tr>
				<th colspan="2" class="title-row">Subgroups</th>
			</tr>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Description</th>
			</tr>
		</thead>
		<tbody>
			{{- range .subgroups }}
				<tr>
					<td>
						<a href="{{ .Name }}/">{{ .Name }}</a>
					</td>
					<td>
						{{ .Description }}
					</td>
				</tr>
			{{- end }}
		</tbody>
	</table>
{{ end }}
{{ if .repos }}
<table class="wide">
	<thead>
		<tr>
			<th colspan="2" class="title-row">Repos</th>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Description</th>
			</tr>
		</tr>
	</thead>
	<tbody>
		{{- range .repos }}
			<tr>
				<td>
					<a href=":/repos/{{ .Name }}/">{{ .Name }}</a>
				</td>
				<td>
					{{ .Description }}
				</td>
			</tr>
		{{- end }}
	</tbody>
</table>
{{ end }}
{{- end -}}
